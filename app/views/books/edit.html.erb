<body>
  <h1>Editing Book</h1>
    <% if @book.errors.any? %>
     <div class= "error_explanation">
      <h3>2 errors prohibited this book from being saved</h3>
     </div>
     <% @book.errors.full_messages.each do |message| %>
     <%= message %>
     <% end %>
    <% end %>
  <%= form_for(@book) do |f| %>
    <div class = "field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class = "field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class = "action">
      <%= f.submit'Update Book', method: :update %>
    </div>
  <% end %>
</body>
