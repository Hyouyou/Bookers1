<body>
  <h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

    <% if @books. present? %>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
   	    <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
   	    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   	    <td><%= link_to "Destroy", book_path(book), "data-confirm" => "削除しますか？", "method" => "delete" %></td>
       </tr>
    <% end %>
    <% end %>
  </table>
  <h2>New book</h2>
    <% if @book.errors.any? %>
     <div class= "error_explanation">
      <h3>2 errors prohibited this book from being saved</h3>
     </div>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>
    <%= form_for(@book) do |f| %>
      <div class = "field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class = "field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class = "action">
        <%= f.submit "Create Book" %>
      </div>
    <% end %>
</body>